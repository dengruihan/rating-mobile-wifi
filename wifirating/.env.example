# Django环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# Django Secret Key (生产环境必须使用强随机字符串)
# 生成方法: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=django-insecure-#&o34pgok9)q4*2)z(^t97$=$l#x_)sbqlq*j2lr3&zox(b9!!

# Debug模式 (开发环境: True, 生产环境: False)
DEBUG=True

# 允许的主机 (开发环境可以使用 *, 生产环境必须指定具体域名)
# 多个主机用逗号分隔, 例如: example.com,www.example.com
ALLOWED_HOSTS=*

# CORS允许的来源 (开发环境可以留空使用CORS_ALLOW_ALL_ORIGINS=True)
# 生产环境必须指定具体域名, 多个域名用逗号分隔
# 例如: https://example.com,https://www.example.com
CORS_ALLOWED_ORIGINS=

# HTTPS重定向 (生产环境: True, 开发环境: False)
SECURE_SSL_REDIRECT=False

# Session Cookie安全设置 (生产环境: True, 开发环境: False)
SESSION_COOKIE_SECURE=False

# CSRF Cookie安全设置 (生产环境: True, 开发环境: False)
CSRF_COOKIE_SECURE=False

# HSTS设置 (生产环境建议启用, 开发环境: 0)
# 单位: 秒, 建议值: 31536000 (一年)
SECURE_HSTS_SECONDS=0

# HSTS包含子域名 (生产环境: True, 开发环境: False)
SECURE_HSTS_INCLUDE_SUBDOMAINS=False

# HSTS预加载 (生产环境: True, 开发环境: False)
SECURE_HSTS_PRELOAD=False
